{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "mocha": true,
    "jquery": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "semi": [2, "always"],
    "indent": ["warn", 4],
    "object-curly-spacing": ["warn", "always"],
    "no-extra-parens": "warn",
    "no-multi-spaces": "warn",
    "no-multiple-empty-lines": ["warn", { "max": 2, "maxEOF": 1 }],
    "max-len": ["warn", { "code": 120 }],
    "no-unused-vars": "off"
  }
}
